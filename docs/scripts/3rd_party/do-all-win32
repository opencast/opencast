#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
#
_exit() {
  if [ ${1:-0} -ne 0 ]; then
    echo "Execution of script ${0##*/} failed" 1>&2
  else
    echo "Execution of script ${0##*/} succeeded" 1>&2
  fi
  exit ${1:-0}
}
#
set -x
[ -z "$HOME3P" ] && export HOME3P=`cd "${0%/*}" 2>/dev/null; echo $PWD`
source "${HOME3P}/utilx"
[ $? -ne 0 ] && _exit 1
#
./check-prereq
[ $? -ne 0 ] && _exit 1
#
./download-sources
[ $? -ne 0 ] && _exit 1
#
case `uname` in
  Linux )
    ./win32-compile
    [ $? -ne 0 ] && _exit 1
    #
    cd "$HOME3P"
    [ $? -ne 0 ] && _exit 1
    rm -f 3rd_party_windows.zip
    zip -r 3rd_party_windows.zip usr
    [ $? -ne 0 ] && _exit 1
    cp ffmpeg/_ffmpeg.zip .
    [ $? -ne 0 ] && _exit 1
    ;;
esac
_exit 0
