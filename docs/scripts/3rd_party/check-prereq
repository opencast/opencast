enable_rpmforge() {
  cd "$HOME3P"
  [ $? -ne 0 ] && return 1
  mkdir -p packages
  [ $? -ne 0 ] && return 1
  cd packages
  [ $? -ne 0 ] && return 1
  #
  case `os_ver` in
    5.* ) V=5 ;;
    6.* ) V=6 ;;
    * ) V="" ;;
  esac
  rpms=""
  case `arch` in
    i386 )
      URLS=`getmcfg rpmforge${V}_x86_url:`
      rpms=`getmcfg rpmforge${V}_x86_pkgs:`
      ;;
    x86_64 )
      URLS=`getmcfg rpmforge${V}_x64_url:`
      rpms=`getmcfg rpmforge${V}_x64_pkgs:`
      ;;
  esac
  for rpm in $rpms; do
    if [ ! -s "$rpm" ]; then
      copypkg "$rpm"
      if [ $? -ne 0 ]; then
        ok=1
        for URL in $URLS; do
          wget -t 5 -4 -O "$rpm" "$URL/$rpm"
          ok=$?
          [ $ok -eq 0 ] && break
        done
        if [ $ok -ne 0 ]; then
          rm -f "$rpm"
          return 1
        fi
      fi
    fi
  done
  install_rpms $rpms
  [ $? -ne 0 ] && return 1
  return 0
}
#
enable_rpmfusion() {
  cd "$HOME3P"
  [ $? -ne 0 ] && return 1
  mkdir -p packages
  [ $? -ne 0 ] && return 1
  cd packages
  [ $? -ne 0 ] && return 1
  #
  case `os_ver` in
    5.* ) V=5 ;;
    6.* ) V=6 ;;
    * ) V="" ;;
  esac
  #
  # First enable access to the free repository
  rpms=""
  URLS=`getmcfg rpmfusion-free${V}_url:`
  rpms=`getmcfg rpmfusion-free${V}_pkgs:`
  for rpm in $rpms; do
    if [ ! -s "$rpm" ]; then
      copypkg "$rpm"
      if [ $? -ne 0 ]; then
        ok=1
        for URL in $URLS; do
          wget -t 5 -4 -O "$rpm" "$URL/$rpm"
          ok=$?
          [ $ok -eq 0 ] && break
        done
        if [ $ok -ne 0 ]; then
          rm -f "$rpm"
          return 1
        fi
      fi
    fi
  done
  install_rpms $rpms
  [ $? -ne 0 ] && return 1
  #
  # Then enable access to the nonfree repositories
  rpms=""
  URLS=`getmcfg rpmfusion-nonfree${V}_url:`
  rpms=`getmcfg rpmfusion-nonfree${V}_pkgs:`
  for rpm in $rpms; do
    if [ ! -s "$rpm" ]; then
      copypkg "$rpm"
      if [ $? -ne 0 ]; then
        ok=1
        for URL in $URLS; do
          wget -t 5 -4 -O "$rpm" "$URL/$rpm"
          ok=$?
          [ $ok -eq 0 ] && break
        done
        if [ $ok -ne 0 ]; then
          rm -f "$rpm"
          return 1
        fi
      fi
    fi
  done
  install_rpms $rpms
  [ $? -ne 0 ] && return 1
  return 0
}
