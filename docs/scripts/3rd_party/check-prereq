#!/bin/bash
set -x
[ -z "$HOME3P" ] && export HOME3P=`cd "${0%/*}" 2>/dev/null; echo $PWD`
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
install_rpms() {
  name=`echo "$1" | awk '{sub("-[0-9.]+.*", "", $1); print $1; exit 0}'`
  name_ver=`echo "$1" | awk '{
    sub("\\\.(i386|i686|x86_64|noarch)\\\.rpm$", "", $1); print $1; exit 0}'`
  case `os` in
    CentOS | RHEL | SciL )
      installed=`rpm -q --last "$name" | awk '{
        sub("\\\.(i386|i686|x86_64|noarch)$", "", $1); print $1; exit 0}'`
      if [ ! "$installed" = "$name_ver" ]; then
        # Convert file names in "$@" to full path
        IFS='
'
        rpms=(`fullpath "$@"`)
        unset IFS
        # If you want to use force install, define RPM_FORCE=--force
        sudox rpm -iv $RPM_FORCE "${rpms[@]}"
        [ $? -ne 0 ] && return 1
      fi
      ;;
    Ubuntu )
      installed=`dpkg --get-selections "$name" | awk '{print $1}'`
      if [ ! "$installed" = "$name" ]; then
        for rpm in $@; do
          sudox alien -i $rpm
          [ $? -ne 0 ] && return 1
        done
      fi
      ;;
    Debian )
      ;;
    openSUSE )
      ;;
    SLES )
      ;;
    Amazon )
      ;;
    MacOS )
      ;;
  esac
  return 0
}
#
enable_epel() {
  cd "$HOME3P"
  [ $? -ne 0 ] && return 1
  mkdir -p packages
  [ $? -ne 0 ] && return 1
  cd packages
  [ $? -ne 0 ] && return 1
  #
  case `os_ver` in
    5.* ) V=5 ;;
    6.* ) V=6 ;;
    * ) V="" ;;
  esac
  rpms=""
  URLS=`getmcfg epel${V}_url:`
  rpms=`getmcfg epel${V}_pkgs:`
  for rpm in $rpms; do
    if [ ! -s "$rpm" ]; then
      copypkg "$rpm"
      if [ $? -ne 0 ]; then
        ok=1
        for URL in $URLS; do
          wget -t 5 -4 -O "$rpm" "$URL/$rpm"
          ok=$?
          [ $ok -eq 0 ] && break
        done
        if [ $ok -ne 0 ]; then
          rm -f "$rpm"
          return 1
        fi
      fi
    fi
  done
  install_rpms $rpms
  [ $? -ne 0 ] && return 1
  return 0
}
