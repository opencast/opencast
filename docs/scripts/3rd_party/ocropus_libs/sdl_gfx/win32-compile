#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-win32 ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
pcp=`getcfg PCP:`
[ -z "$pcp" ] && exit 1
#
rm -fr "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
gzip -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
cd "${dir}-win32"
[ $? -ne 0 ] && exit 1
#
#cp ../Makefile.in .
#[ $? -ne 0 ] && exit 1
#./configure \
#--host=${MINGW32} \
#--with-sdl-prefix=${MINGW32_PREFIX}
#[ $? -ne 0 ] && exit 1
cp ../Makefile.mingw Makefile
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
#
mkdir SDL
[ $? -ne 0 ] && exit 1
cp SDL_gfxPrimitives.h SDL_gfxPrimitives_font.h SDL_rotozoom.h SDL_framerate.h SDL_imageFilter.h SDL_gfxBlitFunc.h SDL
[ $? -ne 0 ] && exit 1
sudox mkdir -p ${MINGW32_PREFIX}/include/SDL
[ $? -ne 0 ] && exit 1
sudox cp SDL/*.h ${MINGW32_PREFIX}/include/SDL
[ $? -ne 0 ] && exit 1
sudox cp libSDL_gfx.a ${MINGW32_PREFIX}/lib
[ $? -ne 0 ] && exit 1
#
zip "../$pcp" SDL/*.h
[ $? -ne 0 ] && exit 1
zip -j "../$pcp" libSDL_gfx.a
[ $? -ne 0 ] && exit 1
#
touch ../.done-win32
[ $? -ne 0 ] && exit 1
exit 0
