#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
[ -z "$HOME3P" ] && export HOME3P=`cd "${0%/*}" 2>/dev/null; echo $PWD`
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
compile base_libs    mac || exit 1
compile ffmpeg_libs  mac || exit 1
compile ffmpeg       mac || exit 1
compile sox_libs     mac || exit 1
compile sox          mac || exit 1
compile gstreamer    mac || exit 1
compile mediainfo    mac || exit 1
compile tesseract    mac || exit 1
compile qtembedder   mac || exit 1
#
exit 0
