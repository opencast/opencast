#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-mac ] && exit 0
TMPFILE=`mktemp /tmp/${0##*/}.XXXXX`
trap 'rm -f $TMPFILE' 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
#
rm -fr "$dir" "${dir}-mac"
[ $? -ne 0 ] && exit 1
bzip2 -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-mac"
[ $? -ne 0 ] && exit 1
cd "${dir}-mac"
[ $? -ne 0 ] && exit 1
#
./configure --prefix=$LOCAL_PREFIX
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
sudox make install
[ $? -ne 0 ] && exit 1
#
sudox id -u > $TMPFILE
[ $? -ne 0 ] && exit 1
SU_USER=`cat $TMPFILE`
sudox id -g > $TMPFILE
[ $? -ne 0 ] && exit 1
SU_GROUP=`cat $TMPFILE`
sudox find ${LOCAL_PREFIX} -name '*vpx*' -exec chown ${SU_USER}:${SU_GROUP} {} \;
[ $? -ne 0 ] && exit 1
#
touch ../.done-mac
[ $? -ne 0 ] && exit 1
exit 0
