#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
[ -f .done-win32 ] && exit 0
pkg=`getcfg PKG:`
chkpkg "$pkg" || exit 1
dir=`getcfg DIR:`
[ -z "$dir" -o "$dir" = "/" ] && exit 1
pcp=`getcfg PCP:`
[ -z "$pcp" ] && exit 1
#
rm -fr "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
gzip -dc "$pkg" | tar -xv
[ ${PIPESTATUS[0]} -ne 0 -o ${PIPESTATUS[1]} -ne 0 ] && exit 1
mv "$dir" "${dir}-win32"
[ $? -ne 0 ] && exit 1
cd "${dir}-win32"
[ $? -ne 0 ] && exit 1
#
cp ../qt_sbtl_embedder.cc src
[ $? -ne 0 ] && exit 1
cp ../qt_sbtl_embedder.h src
[ $? -ne 0 ] && exit 1
#
./configure \
--host=${MINGW32} \
CC=${MINGW32}-g++
[ $? -ne 0 ] && exit 1
make
[ $? -ne 0 ] && exit 1
#
zip -j "../$pcp" qtsbtlembedder.exe
[ $? -ne 0 ] && exit 1
#
copypc usr/local/bin qtsbtlembedder.exe
[ $? -ne 0 ] && exit 1
#
touch ../.done-win32
[ $? -ne 0 ] && exit 1
exit 0
