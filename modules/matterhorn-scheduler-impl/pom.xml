  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${project.artifactId} </Bundle-SymbolicName>
            <Export-Package>
              org.opencastproject.scheduler.impl;version=${project.version},
              org.opencastproject.scheduler.impl.solr;version=${project.version},
              org.opencastproject.scheduler.impl.persistence;version=${project.version},
              org.opencastproject.scheduler.endpoint;version=${project.version}
            </Export-Package>
            <Import-Package>
              org.opencastproject.rest;version=${project.version},
              org.opencastproject.metadata.dublincore;version=${project.version},
              org.opencastproject.message.broker.api.index;version=${project.version},
              org.opencastproject.scheduler.api;version=${project.version},
              *;resolution:=optional
            </Import-Package>
            <Private-Package>
              net.fortuna.ical4j.*;-split-package:=merge-last
            </Private-Package>
            <Service-Component>
              OSGI-INF/scheduler-service-cleanup-finished-recordings-scanner.xml,
              OSGI-INF/scheduler-service-index.xml,
              OSGI-INF/scheduler-service-persistence.xml,
              OSGI-INF/scheduler-service.xml,
              OSGI-INF/scheduler-service-rest.xml
            </Service-Component>
            <JPA-PersistenceUnits>
              org.opencastproject.scheduler.impl.persistence
            </JPA-PersistenceUnits>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
