      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.opencastproject</groupId>
      <artifactId>opencast-distribution-service-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
