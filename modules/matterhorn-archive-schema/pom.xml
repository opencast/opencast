  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${project.artifactId} </Bundle-SymbolicName>
            <Import-Package>
              org.opencastproject.archive.api;version=${project.version},
              org.opencastproject.archive.base;version=${project.version},
              org.opencastproject.archive.base.endpoint;version=${project.version},
              org.opencastproject.archive.base.persistence;version=${project.version},
              org.opencastproject.archive.base.storage;version=${project.version},
              org.opencastproject.archive.base.jmx;version=${project.version},
              org.opencastproject.mediapackage.*;version=${project.version},
              org.opencastproject.solr;version=${project.version},
              org.opencastproject.schema;version=${project.version},
              *;resolution:=optional
            </Import-Package>
            <Export-Package>
              org.opencastproject.archive.opencast;version=${project.version}
            </Export-Package>
            <Service-Component>
              OSGI-INF/archive.xml,
              OSGI-INF/archive-rest.xml
            </Service-Component>
            <JPA-PersistenceUnits>org.opencastproject.archive.base.persistence</JPA-PersistenceUnits>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
