  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.0.1</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName> ${project.artifactId} </Bundle-SymbolicName>
            <Export-Package>
              org.opencastproject.ingest.impl;version=${project.version},
              org.opencastproject.ingest.impl.jmx;version=${project.version},
              org.opencastproject.ingest.endpoint;version=${project.version},
              org.opencastproject.ingest.scanner;version=${project.version}
            </Export-Package>
            <Private-Package>
              META-INF.services;-split-package:=merge-first,
              de.schlichtherle.*;-split-package:=merge-first
            </Private-Package>
            <Import-Package>
              org.opencastproject.rest;version=${project.version},
              org.opencastproject.util.doc.rest,
              javax.persistence,
              *;resolution:=optional
            </Import-Package>
            <Service-Component>
              OSGI-INF/ingest-service.xml,
              OSGI-INF/ingest-service-rest.xml,
              OSGI-INF/inbox-scanner-service.xml
            </Service-Component>
            <JPA-PersistenceUnits>
              org.opencastproject.ingest.endpoint
            </JPA-PersistenceUnits>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

