{
  "rules": {
    "close-attr": "error",
    "close-order": "error",
    "deprecated": "warn",
    "deprecated-rule": "warn",
    "doctype-html": "warn",
    "element-name": ["warn", {"whitelist": ["wizard"]}],
    "meta-refresh": "error",
    "no-conditional-comment": "warn",
    "no-deprecated-attr": "warn",
    "no-dup-attr": "error",
    "no-dup-class": "error",
    "no-dup-id": "error",
    "no-raw-characters": "off",
    "no-redundant-for": "warn",
    "no-redundant-role": "warn",
    "prefer-button": "warn",
    "prefer-tbody": "off",
    "script-type": "off",
    "unrecognized-char-ref": "warn",

    "attribute-allowed-values": "off",
    "element-permitted-content": "warn",
    "element-permitted-occurrences": "error",
    "element-permitted-order": "error",
    "element-required-attributes": "off",
    "element-required-content": "warn",
    "input-attributes": "off",
    "no-multiple-main": "warn",
    "script-element": "error",
    "void-content": "error",

    "aria-label-misuse": "error",
    "empty-heading": "off",
    "empty-title": "warn",
    "input-missing-label": "off",
    "multiple-labeled-controls": "error",
    "no-autoplay": "error",
    "prefer-native-element": ["error", {"exclude": ["progressbar"]}],
    "svg-focusable": "error",
    "text-content": "off",
    "wcag/h30": "off",
    "wcag/h32": "off",
    "wcag/h36": "error",
    "wcag/h37": ["error", {"alias": ["ng-attr-alt"]}],
    "wcag/h67": "error",
    "wcag/h71": "error",

    "long-title": "off",
    "attr-case": "off",
    "attr-quotes": "off",
    "attribute-boolean-style": "off",
    "attribute-empty-style": "off",
    "doctype-style": "off",
    "element-case": "off",
    "no-implicit-close": "off",
    "no-inline-style": "off",
    "no-self-closing": "error",
    "no-trailing-whitespace": "error",
    "void-style": "off",

    "heading-level": "off",
    "no-missing-references": "off",
    "no-utf8-bom": "error"
  }
}
